---
import Layout from '../layouts/Layout.astro';
import Features from '../components/Features.astro';
import Products from '../components/Products.astro';
import Tokenomics from '../components/Tokenomics.astro';
import Roadmap from '../components/Roadmap.astro';
import BusinessModel from '../components/BusinessModel.astro';
---

<Layout 
	title="AUTONIX | Professional Trading Ecosystem"
	description="AUTONIX - Professional Trading Ecosystem. Blockchain-based trading platform providing professional indicators and automated trading robots (EA) for retail traders with $ATX utility token."
	keywords="autonix, professional trading, blockchain trading, automated trading, trading robots, EA, professional indicators, $ATX token, trading ecosystem"
	canonicalUrl="https://autonix.io"
>
	<main id="main-content">
		<section class="hero">
			<div class="hero-video-container">
				<video 
					class="hero-video" 
					autoplay 
					muted 
					loop 
					playsinline
					preload="auto"
				>
					<source src="/autonix-frontend/Autonix.mp4" type="video/mp4">
					Your browser does not support the video tag.
				</video>
			</div>
			<div class="video-overlay"></div>
			<div class="container">
				<div class="hero-content">
					<div class="hero-badge">
						<i class="fas fa-crown"></i>
						PREMIUM TRADING ECOSYSTEM
					</div>
					<h1 class="hero-title">
						<span class="hero-title-main">
							AUTONIX
						</span>
						<span class="hero-title-sub">Professional Trading Ecosystem</span>
					</h1>
					<p class="hero-description">
						Empowering modern traders with real-world utility through trading technology, community-driven education, and proven trading systems. Access professional-grade tools with Smart Money Concepts (SMC), EMA filters, and automated Expert Advisors powered by $ATX tokens.
					</p>
					<div class="hero-features">
						<div class="feature-item">
							<i class="fas fa-robot"></i>
							<span>Expert Advisor Bots</span>
						</div>
						<div class="feature-item">
							<i class="fas fa-chart-line"></i>
							<span>Premium Trading Signals</span>
						</div>
						<div class="feature-item">
							<i class="fas fa-graduation-cap"></i>
							<span>Educational Resources</span>
						</div>
					</div>
					<div class="hero-buttons">
						<a href="#get-started" class="btn-cta btn-cta-primary">
							<span class="btn-text">Get Started</span>
							<i class="fas fa-arrow-right"></i>
						</a>
						<a href="#whitepaper" class="btn-cta btn-cta-secondary">
							<span class="btn-text">Read Whitepaper</span>
							<i class="fas fa-file-alt"></i>
						</a>
					</div>
				</div>
			</div>
		</section>

		<Features/>

		<Products/>

		<Tokenomics/>

		<BusinessModel/>

		<Roadmap/>

		<section class="stats">
			<div class="container">
				<div class="stats-header">
					<h2 class="section-title gradient-text">Live Trading Performance</h2>
					<p class="section-subtitle">Watch our Expert Advisor in action with real-time MetaTrader 5 performance</p>
				</div>
				<div class="stats-layout">
					<div class="tradingview-card">
						<div class="card-header">
							<div class="card-title">
								<i class="fas fa-chart-area"></i>
								<span>MetaTrader 5 Demo</span>
							</div>
						</div>
						<video 
							class="tradingview-chart" 
							autoplay 
							muted 
							loop 
							playsinline
							preload="auto"
						>
							<source src="/autonix-frontend/mta5.mp4" type="video/mp4">
							Your browser does not support the video tag.
						</video>
						<div class="card-footer">
						</div>
					</div>
				</div>
			</div>
		</section>

		<section class="stats">
			<div class="container">
				<div class="stats-header">
					<h2 class="section-title gradient-text">Trading Performance Charts</h2>
					<p class="section-subtitle">Real trading results and performance analytics from our Expert Advisors</p>
				</div>
				<div class="trading-charts-grid">
					<div class="tradingview-card">
						<div class="card-header">
							<div class="card-title">
								<i class="fas fa-chart-bar"></i>
								<span>Performance Analytics</span>
							</div>
						</div>
						<img src="/autonix-frontend/{B6705EE3-D507-4BE7-8DAD-5705C575B291}.png" alt="Trading Performance Analytics" class="trading-image-single" />
						<div class="card-footer">
						</div>
					</div>
					<div class="tradingview-card">
						<div class="card-header">
							<div class="card-title">
								<i class="fas fa-chart-area"></i>
								<span>Trading Results</span>
							</div>
						</div>
						<img src="/autonix-frontend/{212459E6-813A-4A7D-B5A7-34B17466D1DB}.png" alt="Trading Results Chart" class="trading-image-single" />
						<div class="card-footer">
						</div>
					</div>
				</div>
			</div>
		</section>

		<section class="cta-section">
			<div class="container">
				<h2 class="section-title gradient-text">Ready to Start Trading?</h2>
				<p class="section-subtitle">Join thousands of traders who are already using AUTONIX professional trading tools.</p>
				<div class="cta-buttons">
					<a href="#products" class="btn-primary">
						<i class="fas fa-rocket"></i>
						Get Started Now
					</a>
					<a href="#whitepaper" class="btn-secondary">
						<i class="fas fa-book-open"></i>
						Read Docs
					</a>
				</div>
			</div>
		</section>
	</main>
	
</Layout>

<style is:global>
	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}
</style>
