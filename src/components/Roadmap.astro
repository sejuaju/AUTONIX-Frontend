<script>
	function initRoadmapAnimation() {
		const phases = document.querySelectorAll('.roadmap-phase');
		
		const observer = new IntersectionObserver((entries: IntersectionObserverEntry[]) => {
			entries.forEach((entry: IntersectionObserverEntry, index: number) => {
				if (entry.isIntersecting) {
					const phase = entry.target as HTMLElement;
					setTimeout(() => {
						phase.style.opacity = '1';
						phase.style.transform = 'translateY(0)';
					}, index * 100);
				}
			});
		}, {
			threshold: 0.2,
			rootMargin: '0px 0px -50px 0px'
		});
		
		phases.forEach((phase: Element) => {
			const phaseElement = phase as HTMLElement;
			phaseElement.style.opacity = '0';
			phaseElement.style.transform = 'translateY(20px)';
			phaseElement.style.transition = 'all 0.6s ease';
			observer.observe(phase);
		});
	}
	
	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', initRoadmapAnimation);
	} else {
		initRoadmapAnimation();
	}
</script>
