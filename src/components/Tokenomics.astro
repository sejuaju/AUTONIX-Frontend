<style>
	@import '../styles/tokenomics.css';
</style>

<section id="tokenomics" class="tokenomics-section">
	<div class="container">
		<div class="section-header">
			<h2 class="section-title gradient-text">$ATX Tokenomics</h2>
			<p class="section-subtitle">$ATX will be launched via Four.meme, the leading memecoin launchpad on BNB Chain. Fair launch with no presale, no team allocation, and no private sale.</p>
		</div>
		
		<div class="tokenomics-content">
			<div class="allocation-section">
				<div class="section-title-wrapper">
					<div class="section-icon">
						<i class="fas fa-chart-pie"></i>
					</div>
					<h3 class="section-title gradient-text">Token Allocation</h3>
				</div>
				
				<div class="allocation-container">
					<div class="legend-left">
						<div class="legend-item" data-slice="1">
							<div class="legend-indicator">
								<div class="legend-color color-1"></div>
							</div>
							<div class="legend-content">
								<span class="legend-label">Bonding Curve (Four.meme)</span>
								<span class="legend-amount">800,000,000 $ATX</span>
							</div>
						</div>
					</div>
					
					<div class="pie-chart-container">
						<div class="pie-chart">
							<div class="pie-slice slice-1" data-percentage="80"></div>
							<div class="pie-slice slice-2" data-percentage="20"></div>
							
							<div class="pie-label pie-label-1">80%</div>
							<div class="pie-label pie-label-2">20%</div>
							
							<div class="chart-center">
								<div class="chart-center-text">
									<span class="chart-total">1B</span>
									<span class="chart-label">$ATX</span>
								</div>
							</div>
						</div>
					</div>
					
					<div class="legend-right">
						<div class="legend-item" data-slice="2">
							<div class="legend-indicator">
								<div class="legend-color color-2"></div>
							</div>
							<div class="legend-content">
								<span class="legend-label">PancakeSwap Liquidity</span>
								<span class="legend-amount">200,000,000 $ATX</span>
							</div>
						</div>
					</div>
				</div>
				
				<div class="allocation-legend" style="display: none;"></div>
			</div>
			
			<div class="launch-mechanism-section">
				<div class="section-title-wrapper">
					<div class="section-icon">
						<i class="fas fa-rocket"></i>
					</div>
					<h3 class="section-title gradient-text">Launch Mechanism</h3>
				</div>
				
				<div class="mechanism-grid">
					<div class="mechanism-item">
						<div class="mechanism-icon">
							<i class="fas fa-balance-scale"></i>
						</div>
						<div class="mechanism-content">
							<h4>Fair Launch</h4>
							<p>100% of tokens distributed through bonding curve - no presale, no team allocation, no private investors</p>
						</div>
					</div>
					
					<div class="mechanism-item">
						<div class="mechanism-icon">
							<i class="fas fa-chart-line"></i>
						</div>
						<div class="mechanism-content">
							<h4>Bonding Curve</h4>
							<p>Token price increases as more tokens are purchased, rewarding early supporters</p>
						</div>
					</div>
					
					<div class="mechanism-item">
						<div class="mechanism-icon">
							<i class="fas fa-water"></i>
						</div>
						<div class="mechanism-content">
							<h4>Auto-Liquidity</h4>
							<p>Once bonding curve reaches 100% (~18 BNB), 20% of tokens are automatically paired with BNB and seeded to PancakeSwap</p>
						</div>
					</div>
					
					<div class="mechanism-item">
						<div class="mechanism-icon">
							<i class="fas fa-bolt"></i>
						</div>
						<div class="mechanism-content">
							<h4>Instant Trading</h4>
							<p>Tokens are immediately tradable after launch with no waiting period</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<script>
	document.addEventListener('DOMContentLoaded', function() {
		function positionPieLabels() {
			const pieChart = document.querySelector('.pie-chart');
			const labels = document.querySelectorAll('.pie-label');
			
			if (!pieChart || labels.length === 0) return;
			
			const chartRect = pieChart.getBoundingClientRect();
			const centerX = chartRect.width / 2;
			const centerY = chartRect.height / 2;
			const radius = Math.min(centerX, centerY) * 0.7;
			
			const sliceData = [
				{ percentage: 80, label: '.pie-label-1', startPercent: 0 },
				{ percentage: 20, label: '.pie-label-2', startPercent: 80 }
			];
			
			sliceData.forEach((slice) => {
				const label = document.querySelector(slice.label);
				if (!label) return;
				
				const middlePercent = slice.startPercent + (slice.percentage / 2);
				const middleAngle = (middlePercent / 100) * 360;
				
				const angleInRadians = ((middleAngle + 225 - 90) * Math.PI) / 180;
				
				const x = centerX + radius * Math.cos(angleInRadians);
				const y = centerY + radius * Math.sin(angleInRadians);
				
				const htmlLabel = label as HTMLElement;
				htmlLabel.style.left = `${x}px`;
				htmlLabel.style.top = `${y}px`; 
				htmlLabel.style.transform = 'translate(-50%, -50%)';
			});
		}
		
		positionPieLabels();
		
		setTimeout(positionPieLabels, 100);
		
		let resizeTimeout: number;
		window.addEventListener('resize', () => {
			clearTimeout(resizeTimeout);
			resizeTimeout = window.setTimeout(positionPieLabels, 100);
		});
	});
</script>
