<script>
	// Business Model section animations
	function initBusinessModelAnimation() {
		const sections = document.querySelectorAll('.business-section');
		
		const observer = new IntersectionObserver((entries: IntersectionObserverEntry[]) => {
			entries.forEach((entry: IntersectionObserverEntry, index: number) => {
				if (entry.isIntersecting) {
					const section = entry.target as HTMLElement;
					setTimeout(() => {
						section.style.opacity = '1';
						section.style.transform = 'translateY(0)';
					}, index * 150);
				}
			});
		}, {
			threshold: 0.1,
			rootMargin: '0px 0px -50px 0px'
		});
		
		sections.forEach((section: Element) => {
			const sectionElement = section as HTMLElement;
			sectionElement.style.opacity = '0';
			sectionElement.style.transform = 'translateY(30px)';
			sectionElement.style.transition = 'all 0.8s ease';
			observer.observe(section);
		});
	}
	
	// Initialize animation
	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', initBusinessModelAnimation);
	} else {
		initBusinessModelAnimation();
	}
</script>
